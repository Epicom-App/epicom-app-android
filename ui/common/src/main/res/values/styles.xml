<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Widget.MaterialComponents.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="App.Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">?textAppearanceCustomButton</item>
        <item name="android:textColor">@color/tintMainColor</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="App.Widget.MaterialComponents.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/tintMainColor</item>
    </style>

</resources>
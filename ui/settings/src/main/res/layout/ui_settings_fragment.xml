<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/imprint"
        android:layout_width="0dp"
        android:layout_height="@dimen/ui_settings_item_height"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:text="@string/settings_imprint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/data_privacy"
        android:layout_width="0dp"
        android:layout_height="@dimen/ui_settings_item_height"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:text="@string/settings_data_privacy"
        app:layout_constraintTop_toBottomOf="@+id/imprint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="@dimen/ui_settings_item_height"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:text="@string/settings_about"
        app:layout_constraintTop_toBottomOf="@+id/data_privacy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/licenses"
        android:layout_width="0dp"
        android:layout_height="@dimen/ui_settings_item_height"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:text="@string/settings_licenses"
        app:layout_constraintTop_toBottomOf="@+id/about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/onboarding"
        android:layout_width="0dp"
        android:layout_height="@dimen/ui_settings_item_height"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:text="@string/onboarding_title_covidMap"
        app:layout_constraintTop_toBottomOf="@+id/licenses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>